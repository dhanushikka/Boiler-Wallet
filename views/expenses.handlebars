<h1>Expenses</h1>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      Balance: {{budget}}
      <br>
      <ul>
      {{#each clubExpenses}}
        <li>
        <font face = "Courier">{{this.name}} ${{this.transaction}}  {{this.where}}</font>
        </li>
      {{/each}}
      </ul>
    </div>
    <div class="col-md-2">
      <form class="form-signin" method = "POST" action="/transaction">
            <h2 class="form-signin-heading">Complete transaction</h2>

            <label for="inputEmail" class="sr-only">Name</label>
            <input type="text" id="inputEmail" class="form-control" name="name" placeholder="{{user}}" >

            <label for="inputAmount" class="sr-only">Amount</label>
            <input type="number" id="inputPassword" class="form-control" name="amount" placeholder="0" >

            <label for="inputPassword" class="sr-only">Reason</label>
            <input type="text" id="inputPassword" class="form-control" name="where" placeholder="Description" >

            <div class="checkbox">
            </div>
            <input type = "submit" value = "Submit">
            <!-- <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button> -->
        </form>
    </div>
  </div>
</div>
