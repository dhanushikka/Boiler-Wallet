</nav>

  <div id="header">
    <div class="container1">
      <div class="row">
        <div class="col-lg-6">
          <h1 class="login">Boiler Wallet</h1>
          <h4 class="subtitle">The easy way to budget.</h4>
          <h4 class="scroll-down"><a class="scroll-down" href="#login"><i class="fas fa-angle-down"></i></a></h4>
        </div>
      </div>
    </div>
  </div>

  <div class="takeSpace"></div>

 <div class="container2">
    <div class="row">
      <div id="login" class="imgSide col-lg-6">
        <img src="/assets/mirza-babic-766502-unsplash.jpg">
      </div>
        <div class="login col-lg-4">
            <form class="form-signin" method = "POST" action="/sign-in-submit">
                <h2 class="form-signin-heading">Sign In</h2>
                <label for="inputEmail" class="sr-only">Email address</label>
                <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" >
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" >
                <input type = "submit" value = "Submit">
            </form>

          {{#if reg}}
            <font color = "yellow">
            <h4 class="subtitle">You are now registered!</h4>
            </font>
          {{/if}}

          {{#each errors}}
            <div class = "alert alert-danger">{{text}}</div>
          {{else}}

          {{/each}}

        </div>
      </div>
  </div>

